<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/trailer_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/trailer_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/trailer_play"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_play_circle_outline"
            android:backgroundTint="@color/divider"
            app:layout_constraintBottom_toBottomOf="@+id/trailer_thumbnail"
            app:layout_constraintLeft_toLeftOf="@+id/trailer_thumbnail"
            app:layout_constraintRight_toRightOf="@+id/trailer_thumbnail"
            app:layout_constraintTop_toTopOf="@+id/trailer_thumbnail" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>